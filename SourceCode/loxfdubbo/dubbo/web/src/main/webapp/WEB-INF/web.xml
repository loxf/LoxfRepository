<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">  
<web-app>

	<display-name>dubbo</display-name>
	<!-- 启动注册中心监听 -->
	<listener>
		<listener-class>org.loxf.dubbo.registry.RegistryListen</listener-class>
	</listener>

	<servlet>
		<servlet-name>console</servlet-name>
		<servlet-class>org.loxf.dubbo.action.ConsoleAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>console</servlet-name>
		<url-pattern>/console</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>org.loxf.dubbo.action.HelloAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>/html/console/console.jsp</welcome-file>
	</welcome-file-list>
</web-app>
